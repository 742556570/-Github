	<select id="getCustomerDetails" resultMap="ClCustomerDetailsResultMap"
		parameterType="java.lang.String">
		SELECT
		A.USR_CDE AS CUST_ID,
		"" AS POLICY_NO,
		C.ID_NO AS
		ID_NO,
		"I" AS ID_TYPE,
		B.DUTY AS TITLE,
		C.CUST_NAME AS NAME,
		C.INDIV_SEX
		AS GENDER,
		C.BIRTHDAY_DATE AS BIRTHDAY,
		"" AS OCCUPATION,
		"" AS
		MARITAL_STATUS,
		"" AS MARITAL_STATUS,
		"" AS QUALIFICATION,
		"" AS
		HOUSE_OWNERSHIP,
		"" AS LIQUID_ASSET,
		A.USR_TEL AS MOBILE_NO,
		"" AS EMAIL,
		"" AS EMP_STATUS,
		"" AS NBR_OF_DEPENDENTS,
		"" AS SOCIAL_INS_AMT,
		B.INDIV_EMP_NAME AS CORP_NAME,
		"" AS FAMILY_KNOW,
		"" AS HASCAR,
		B.LIVE_ADDR AS HOMEADDRESS,
		"" AS BRANCH_ID,
		"" AS BRANCH_CODE
		FROM
		CL_USR A,
		CL_USR_INFO B,
		CL_IDCARD_INFO C
		WHERE
		A.USR_CDE = B.USR_CDE
		AND
		B.USR_CDE = C.USR_CDE
		AND A.USR_CDE = #{CUST_ID}
	</select>

