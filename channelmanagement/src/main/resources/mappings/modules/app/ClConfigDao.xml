<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeeplus.modules.app.dao.ClConfigDao">

	<resultMap id="ClConfigResultMap" type="ClConfig">
		<result property="id" column="id" />
		<result property="key" column="key" />
		<result property="val" column="val" />
		<result property="type" column="type" />
		<result property="comment" column="comment" />
		<result property="creatdate" column="creatdate" />
		<result property="creatusr" column="creatusr" />
		<result property="mdfdate" column="mdfdate" />
		<result property="mdfusr" column="mdfusr" />
	</resultMap>
	
	<sql id="ClConfigColumns">
		a.id,
		a.key,
		a.val,
		a.type,
		a.comment,
		a.creatdate,
		a.creatusr,
		a.mdfdate,
		a.mdfusr
	</sql>


	<!-- 根据用户标识获得用户 对象-->
	<select id="getAllConfig" resultMap="ClConfigResultMap" >
		SELECT
		<include refid="ClConfigColumns" />
		FROM CL_CONFIG a
	</select>


	<!-- 根据手机号获得用户 -->
	<select id="getByConfigId" resultMap="ClConfigResultMap" parameterType="java.lang.String">
		SELECT
		<include refid="ClConfigColumns" />
		FROM CL_CONFIG a
		WHERE a.id = #{id}
	</select>



	<!-- 插入用户 -->
	<insert id="insert">
		INSERT INTO CL_CONFIG(
		id,
		key,
		val,
		type,
		comment,
		creatdate,
		creatusr,
		mdfdate,
		mdfusr
		) VALUES (
		#{id},
		#{key},
		#{val},
		#{type},
		#{comment},
		#{creatdate},
		#{creatusr},
		#{mdfdate},
		#{mdfusr}
		)
	</insert>
	

	<update id="updateById">
		UPDATE cl_config SET key = key
		<if test="val != null and val != ''">
			,val = #{val}
		</if>
		<if test="type != null and type != ''">
			,type = #{type}
		</if>
		<if test="comment != null and comment != ''">
			,comment = #{comment}
		</if>
		<if test="mdfdate != null and mdfdate != ''">
			,mdfdate = #{mdfdate}
		</if>
		<if test="mdfusr != null and mdfusr != ''">
			,mdfusr = #{mdfusr}
		</if>
		WHERE id = #{id}
	</update>


</mapper>